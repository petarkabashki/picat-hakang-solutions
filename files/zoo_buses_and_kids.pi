import cp.

main => go.

go =>
  NumKids = 300,
  Seats = [30,40],
  Price = [400,500],
  N = Seats.len,

  % decision variables
  Buses = new_list(2),
  Buses :: 0..100,

  sum([Seats[I]*Buses[I] : I in 1..N]) #>= NumKids,
  Z #= sum([Buses[I]*Price[I] : I in 1..2]),

  solve($[min(Z)], Buses),

  println(z=Z),
  println(buses=Buses),
  
  nl.

