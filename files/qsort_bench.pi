partition([],_,L1,L2) => L1 = [], L2=[].
partition([X|L],Y,LL,L2), X =< Y =>
      LL=[X|L1],
      partition(L,Y,L1,L2).
partition([X|L],Y,L1,LL) =>
      LL = [X|L2],
      partition(L,Y,L1,L2).

qsort([], R1, R2) => R1 = R2 .
qsort([X|L], R0, R) =>
      partition(L, X, L1, L2),
      qsort(L2, R0, R1),
      qsort(L1, [X|R1], R).

