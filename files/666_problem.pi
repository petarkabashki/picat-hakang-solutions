import util.

main => go.


go =>
  S = "6",
  A = [S.to_integer()],
  foreach(_I in 2..666) 
     S := S ++ "6",
     A := A ++ [S.to_integer()]
  end,
  println(A.sum()),
  nl.

% Another approach
go2 => 
  println(sum([['6' : _ in 1..I].to_int() : I in 1..666])).